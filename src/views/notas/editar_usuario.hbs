<div class="row">
    <div class="col-sm-6 mx-auto">
        <div class="card border-dark">
            <div class="card-header text-center bg-dark pt-4">
                <h2 class="text-white">EDITAR USUARIO</h2>
            </div>
            <div class="card-body">
                <form method="POST">
                    <div class="form-group mb-3 m-4 my-3">
                        <label for="name">Nombre completo:</label>
                        <input type="text" class="form-control form-control-lg" name="name" placeholder="Nombre completo" value="{{usuario.name}}" />
                    </div>
                    <div class="form-group mb-3 m-4">
                        <label for="email">Correo electrónico:</label>
                        <input type="email" class="form-control form-control-lg" name="email" placeholder="Correo electrónico" value="{{usuario.email}}" />
                    </div>
                    <div class="form-group text-center">
                        <div class="d-grid gap-2 col-7 mx-auto">
                            <button type="submit" class="btn btn-block btn-lg text-white" style="background: #000046;">
                                <h5>GUARDAR CAMBIOS</h5>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
