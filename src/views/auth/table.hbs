<div class="card mt-5 rounded">
    <table id="myTable" class="display table table_hover">
        <thead>
            <tr>
                <th>Email</th>
                <th>Nombre</th>
                <th>Hora</th>
            </tr>
        </thead>
        <tbody>
            {{#each registrosAsistencia}}
            <tr>
                <td>{{this.nombre}}</td>
                <td>{{this.email}}</td>
                <td>
                    <script>
                        var fechaRegistro = new Date("{{this.fecha}}");
                        var dia = fechaRegistro.getDate();
                        var mes = fechaRegistro.getMonth() + 1;
                        var año = fechaRegistro.getFullYear();
                        var horas = fechaRegistro.getHours();
                        var minutos = fechaRegistro.getMinutes();

                        var fechaHoraFormatead = `${dia}/${mes}/${año} - ${horas}:${minutos}`
                        document.currentScript.parentElement.innerHTML = fechaHoraFormatead;


                    </script>

                </td>
                
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>


